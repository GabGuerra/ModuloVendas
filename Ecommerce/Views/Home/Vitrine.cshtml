@model Ecommerce.Models.Vitrine.VitrineVD
@{
    ViewData["Title"] = "Home Page";
    Layout = "_Layout";
}
<div class="slider-area ">
    @*<div class="single-slider slider-height2 d-flex align-items-center" data-background="~/assets/img/hero/category.jpg">*@
    <div class="row">
        <div class="col-xl-12">
        </div>
    </div>
</div>

@if (Model.ListaProdutoRecomendados.Count > 0)
{
    <div class="product_image_area" style="margin-top:2px !important">
        <div class="single-slider slider-height2 d-flex align-items-center" data-background="~/assets/img/hero/category.jpg">
            <div class="container">
                <div class="col-lg-12">
                    <h3> Produtos Recomendados: </h3>
                    <div class="product_img_slide owl-carousel">
                        @{
                            foreach (var produtoRecomendado in Model.ListaProdutoRecomendados)
                            {
                                <div class="single_product_img">
                                    <p> @produtoRecomendado.NomeProduto</p>
                                    <a href='@Url.Action("DetalheProduto","Produto", new { codProduto = produtoRecomendado.CodProduto })'>
                                        <img src=@Url.Content(produtoRecomendado.CaminhoImagemPrincipal) alt="#" class="img-fluid" style="height:300px; width:300px; margin: 0 auto;">
                                    </a>
                                </div>
                            }
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
}
<section class="product_list section_padding" style="padding-top: 30px">
    <div class="container">
        <div class="row">
            <div class="col-md-4">
                <div class="product_sidebar">
                    <div class="single_sedebar">
                        <form action="#">
                            <input type="text" name="#" placeholder="Pesquisar">
                            <a onclick="alert('não implementado')">
                                <i class="fas fa-search"></i>
                            </a>
                        </form>
                    </div>
                    <div class="single_sedebar">
                        <div class="select_option">
                            <div class="select_option_list">Categoria <i class="right fas fa-caret-down"></i> </div>
                            <div class="select_option_dropdown">
                                @foreach (var categoria in Model.ListaCategorias)
                                {
                                    <p><a href="#">@categoria.NomeCategoria</a></p>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-8">
                <div class="product_list">
                    <div class="row">
                        @foreach (var p in Model.ListaProdutos)
                        {
                            <div class="col-lg-6 col-sm-6">
                                <div class="single_product_item">
                                    <img src="@Url.Content(p.CaminhoImagemPrincipal)" style="position: relative" class="img-fluid product_img">
                                    @if (p.IndProdutoEmDestaque)
                                    {
                                        <img src="~/assets/img/product/produto_em_destaque.png" style="position: absolute; width: 100px; height:100px;left: 245px;">
                                    }
                                    <h3>
                                        <a href='@Url.Action("DetalheProduto","Produto", new { codProduto = p.CodProduto })'>
                                            @p.NomeProduto
                                        </a>
                                    </h3>
                                    <p>R$ @p.PrecoVenda</p>
                                </div>
                            </div>
                        }
                    </div>
                    <div class="load_more_btn text-center">
                        <a href="#" class="btn_3">Carregar Mais</a> <!-- VERIFICAR COMO VAI SER IMPLEMENTADO-->
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<style>
    .product_img {
        width: 395px;
        height: 395px;
    }
</style>
